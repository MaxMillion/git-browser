{
  "name": "Git-Browser",
  "version": "0.1.4",
  "manifest_version": 2,
  "offline_enabled": true,
  "description": "Browse Git Repos offline.",
  "icons": {
    "16": "icons/icon-16.png",
    "60": "icons/icon-60.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png",
    "512": "icons/icon-512.png"
  },
  "app": {
    "background": {
      "scripts": ["chromeapp/background.js"]
    }
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*",
    {"socket": [ "tcp-connect:*:*" ]}
  ]
}
